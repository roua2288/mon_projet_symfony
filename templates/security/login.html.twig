{% extends "base.html.twig" %}

{% block title %}Connexion - TekUP{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset("tekup/css/adminCss.css") }}">
    <link rel="stylesheet" href="{{ asset("styles/formConxEtud.css") }}">
{% endblock %}

{% block body %}
<div class="login-container">
    <div class="login-form">
        <h1>Connexion Administrateur</h1>
        
        {% if error %}
            <div class="alert alert-danger">
                Identifiants incorrects. Essayez avec :<br>
                Email: <strong>admin@tekup.com</strong><br>
                Mot de passe: <strong>admin123</strong>
            </div>
        {% endif %}

        <form method="post">
            <div class="form-group">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" 
                       name="_username" id="inputEmail" 
                       class="form-control" 
                       placeholder="admin@tekup.com"
                       required autofocus>
            </div>

            <div class="form-group">
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="_password" 
                       id="inputPassword" class="form-control" 
                       placeholder="admin123"
                       required>
            </div>

            <input type="hidden" name="_csrf_token" 
                   value="{{ csrf_token("authenticate") }}">

            <button type="submit" class="btn btn-primary btn-block">
                Se connecter
            </button>
        </form>
    </div>
</div>
{% endblock %}
